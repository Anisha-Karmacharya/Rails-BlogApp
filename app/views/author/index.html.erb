<div class="container">
    <h1>Author</h1>
     <% @authors.each do |author| %>
        <div class="card mb-3 border-dark text-dark bg-light mb-3">
            <div class="row g-0">
                <div class="col-md-4">
                    <img src="..." class="img-fluid rounded-start" alt="...">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h4 class="card-title"><%= author.name%></h4>  
                    </div>
                </div>
            </div>
        </div>
    <% end %>
    <%= link_to "Add author", new_author_path, class: "btn btn-outline-dark" %>
</div>
