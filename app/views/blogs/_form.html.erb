<%= form_for @blog do |f| %>
  <div class="form-group">
    <%= f.text_field :title, class: "form-control", placeholder: "Title", autofocus: true %>
  </div>
  <div class="form-group">
    <%= f.text_field :author, class: "form-control", placeholder: "Author" %>
  </div>
  <div class="form-group">
    <%= f.text_area :content, class: "form-control", placeholder: "Content" %>
  </div>
  <div class="form-group">
    <%= f.submit "Save Blog", class: "btn btn-block btn-default" %>
  </div>
<% end %>