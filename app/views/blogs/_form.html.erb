<%= form_for @blog do |f| %>
<div class="container">
    <form class="card p-2">
        <div class="form-group mb-3 col-sm-10">
            <%= f.text_field :title, class: "form-control", placeholder: "Title", autofocus: true %>
        </div>
        <div class="form-group mb-3 col-sm-10">
            <%= f.text_area :content, class: "form-control", placeholder: "Content" %>
        </div>
        <div class="form-group mb-3 col-sm-10">
            <%= f.text_field :posted_on, class: "form-control datepicker", placeholder: "date" %>
        </div>
        <div class="form-group mb-3 col-sm-10">
            <%= f.file_field :image, class: "form-control" %>
        </div>
        <div class="form-group mb-3">
            <%= f.submit "Save Blog", class: "btn btn-outline-dark" %>
        </div>
    </form>
</div>
<% end %>